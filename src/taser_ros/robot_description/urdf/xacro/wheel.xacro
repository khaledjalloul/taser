<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="pink">
        <color rgba="0.3 0 0.2 1" />
    </material>

    <xacro:macro name="wheel" params="side offset_sign">
        <link name="${side}_wheel">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="1.575 0.0 0.0" />
                <geometry>
                    <cylinder length="0.1" radius="0.15" />
                </geometry>
                <material name="pink" />
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="1.575 0.0 0.0" />
                <geometry>
                    <cylinder length="0.1" radius="0.15" />
                </geometry>
            </collision>
        </link>

        <joint name="base_link_${side}_wheel_joint" type="continuous">
            <parent link="base_link" />
            <child link="${side}_wheel" />
            <origin xyz="0.0 ${offset_sign}0.3 -0.5" rpy="0.0 0.0 0.0" />
            <axis xyz="0 1 0" />
        </joint>
    </xacro:macro>

</robot>