<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="light-blue">
        <color rgba="0 0.3 0.7 1" />
    </material>
    <material name="white">
        <color rgba="0.5 0.5 1 1" />
    </material>

    <xacro:macro name="arm" params="name y_offset">
        <link name="${name}_1">
            <visual>
                <origin xyz="0.0 0.0 -0.5" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.5 0.25 1" />
                </geometry>
                <material name="light-blue" />
            </visual>
        </link>

        <joint name="base_${name}_1_joint" type="continuous">
            <parent link="base" />
            <child link="${name}_1" />
            <origin xyz="0.0 ${y_offset} 1.5" rpy="0.0 0.0 0.0" />
            <axis xyz="0 1 0" />
        </joint>

        <link name="${name}_2">
            <visual>
                <origin xyz="0.0 0.0 -0.25" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.25 0.25 0.5" />
                </geometry>
                <material name="white" />
            </visual>
        </link>

        <joint name="${name}_1_${name}_2_joint" type="continuous">
            <parent link="${name}_1" />
            <child link="${name}_2" />
            <origin xyz="0.0 0 -1" rpy="0.0 0.0 0.0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${name}_3">
            <visual>
                <origin xyz="0.0 0.0 -0.5" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.25 0.25 1" />
                </geometry>
                <material name="light-blue" />
            </visual>
        </link>

        <joint name="${name}_2_${name}_3_joint" type="continuous">
            <parent link="${name}_2" />
            <child link="${name}_3" />
            <origin xyz="0.0 0 -0.5" rpy="0.0 0.0 0.0" />
            <axis xyz="0 1 0" />
        </joint>

        <link name="${name}_eef">
        </link>

        <joint name="${name}_3_${name}_eef_joint" type="fixed">
            <parent link="${name}_3" />
            <child link="${name}_eef" />
            <origin xyz="0.0 0 -1" rpy="0.0 0.0 0.0" />
        </joint>

    </xacro:macro>

</robot>